<%= form_for(@teammate) do |f| %>
<% if @teammate.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(@teammate.errors.count, "error") %> prohibited this teammate from being saved:</h2>

  <ul>
    <% @teammate.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
    <% end %>
  </ul>
</div>
<% end %>

<table class="noborder">
  <tr class="field">
    <td><%= f.label :firstname %>:</td>
    <td><%= f.text_field :firstname %></td>
  </tr>
  <tr class="field">
    <td><%= f.label :lastname %>:</td>
    <td><%= f.text_field :lastname %></td>
  </tr>
  <tr class="field">
    <td><%= f.label :address %>:</td>
    <td><%= f.text_area :address, :cols => 22, :rows => 3 %></td>
  </tr>
  <tr class="field">
    <td><%= f.label :zip %>:</td>
    <td><%= f.text_field :zip %></td>
  </tr>
  <tr class="field">
    <td><%= f.label :city %>:</td>
    <td><%= f.text_field :city %></td>
  </tr>
  <tr class="field">
    <td><%= f.label :phone %>:</td>
    <td><%= f.text_field :phone %></td>
  </tr>
  <tr class="field">
    <td><%= f.label :cell %>:</td>
    <td><%= f.text_field :cell %></td>
  </tr>
  <tr class="field">
    <td><%= f.label :dob %>:</td>
    <td><%= f.date_select :dob, :start_year => 1960, :end_year => (Time.now.year - 10)  %></td> 
  </tr>
</table>

<div class="actions">
  <%= f.submit t('.submit') %>
</div>
<% end %>

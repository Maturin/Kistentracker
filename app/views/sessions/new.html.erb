<h1><%= t('.please_login') %></h1>

<%= form_tag do %>
  <div class="field">
    <%= label_tag :user_name, t('.user_name') %><br />
    <%= text_field_tag :user_name %>
  </div>

  <div class="field">
    <%= label_tag :password, t('.password') %><br />
    <%= password_field_tag :password %>
  </div>

  <div class="actions">
    <%= submit_tag t('.login') %>
  </div>
<% end %>

<h1>Bitte Einloggen</h1>

<%= form_tag do %>
  <div class="field">
    <label for='user_name'>Name:</label><br />
    <%= text_field_tag :user_name %>
  </div>

  <div class="field">
    <label for='password'>Passwort:</label><br />
    <%= password_field_tag :password %>
  </div>

  <div class="actions">
    <%= submit_tag 'Login' %>
  </div>
<% end %>
